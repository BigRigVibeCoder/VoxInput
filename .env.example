# VoxInput Environment Configuration
# =====================================
# Override precedence: environment variable > this file > code default
#
# Copy this to .env and edit. .env is gitignored.

# Log level: TRACE|DEBUG|INFO|WARNING|ERROR|FATAL
# TRACE is the default for desktop install (pre-UAT).
# Switch to WARNING post-UAT for production.
LOG_LEVEL=WARNING

# Path to SQLite logging database. Leave blank for auto (logs/voxinput_logging.db)
LOG_DB_PATH=

# Also log to console/stdout (true|false)
LOG_CONSOLE=true

# Auto-trim: how long to keep logs (days). ERROR/FATAL are never trimmed.
# TRACE/DEBUG trimmed at 1 day, INFO at LOG_RETENTION_DAYS, WARNING at 30 days.
LOG_RETENTION_DAYS=7
